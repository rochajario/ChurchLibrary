@using ChurchLibrary.Domain.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex flex-row ">
        <a asp-area="Identity" class="btn btn-outline-primary mx-2" asp-page="/Account/Manage/Index" title="Manage">Olá @User.Identity?.Name!</a>
        <span>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" class=" btn btn-outline-secondary">Sair</button>
            </form>
        </span>
    </div>
}
else
{
    <div>
        <a asp-area="Identity" class="btn btn-outline-secondary" asp-page="/Account/Login">Login</a>
        <a asp-area="Identity" class="btn btn-primary" asp-page="/Account/Register">Registrar-se</a>
    </div>
}